{% extends 'base.html.twig' %}

{% block title %}Hello ManageUsersController!{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4 text-white">User List</h2>

    {% if users is empty %}
        <div class="alert alert-info">No users found.</div>
    {% else %}
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.username }}</td>
                        <td>
                            {% for role in user.roles %}
                                <span class="badge bg-secondary">{{ role }}</span>
                            {% endfor %}
                        </td>
                        <td>
                            <a href="{{ path('admin_user_edit', { id: user.id }) }}" class="btn btn-sm btn-primary">Edit</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
