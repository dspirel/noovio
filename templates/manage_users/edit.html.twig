{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow login-card" style="min-width: 300px; width: 100%; max-width: 400px;">
            <div "mb-3">
                <h1 class="mb-4">Edit User</h1>
            </div>

            {{ form_start(form) }}
                {{ form_row(form.username) }}
                {{ form_row(form.facebookIdentifier) }}
                {{ form_row(form.roles) }}
                {{ form_row(form.password, {
                    label: 'New Password (leave blank to keep current)',
                    required: false
                }) }}
                <div class="d-grid mt-4">
                {{ form_row(form.submit_button, { label: 'Update User' }) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
