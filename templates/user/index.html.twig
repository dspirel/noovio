{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container mt-5">
    <a class="btn btn-sm btn-primary" href="{{ path('app_user_new') }}">Create new</a>
    <h1 class="mb-4 text-white">User index</h1>

    <table class="table table-bordered table-hover shadow-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>FacebookIdentifier</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.facebookIdentifier }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
