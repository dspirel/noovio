{% extends 'base.html.twig' %}

{% block title %}Generate new post{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center vh-100 text-center">
    <div class="card p-4 shadow login-card" style="min-width: 300px; width: 100%; max-width: 400px;">
        <h1>Generate new post</h1>

        <form action="{{ path('app_task_post_generate') }}" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <input class="form-control" type="file" name="file" required>
            </div>
            <br><br>
            <div class="mb-3">
                <button class="btn btn-lg btn-primary" type="submit">Upload</button>
            </div>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
        </form>
    </div>
</div>
{% endblock %}
