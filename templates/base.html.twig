<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="bg-primary">
        {# Navbar #}
        <nav class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container d-flex justify-content-between align-items-center">

            {# Left side: Brand + Links #}
            <div class="d-flex align-items-center gap-3">
            <a class="navbar-brand mb-0 h1" href="{{ path('app_home') }}">Noovio Workspace</a>

            {% if is_granted('ROLE_ADMIN') %}
                <a class="btn btn-outline-light" href="{{ path('app_user_index') }}">Manage Users</a>
            {% endif %}

            {% if app.user %}
                <a class="btn btn-outline-light" href="{{ path('app_home') }}">Dashboard</a>
                <a class="btn btn-outline-light" href="{{ path('user_files') }}">My Files</a>
            {% endif %}
            </div>

            {# Right side: Auth Links #}
            <div>
            {% if app.user %}
                <a class="btn btn-outline-light" href="{{ path('app_logout') }}">Logout</a>
            {% endif %}
            </div>

        </div>
        </nav>
        {# Main content area #}
        {% block body %}{% endblock %}
    </body>
</html>
